<div class="products-header">
  <h1>Products</h1>
  <div>
    <%= link_to "New product", new_product_path, class: "btn btn-primary",
    data: { turbo_frame: :remote_modal } %>
  </div>
</div>
<table class="table" id="products">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody id='product-list'>
    <%#= render @products %>
  </tbody>
</table>

<%= turbo_frame_tag "pagination", src: products_path(format: :turbo_stream), loading: :lazy %>
