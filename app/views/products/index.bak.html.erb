<%= turbo_stream_from 'products' %>

<% unless @products.present? %>
  <div class="min-vh-100 w-100 d-flex justify-content-center align-items-center">
    <h2 class="font-bold text-4xl text-center w-100 inline-block text-teal">
      No products to display! Do you want to add?
    </h2>
  <div>
<% else %>
  <%= turbo_frame_tag 'products-list' do %>
    <div class="products-header">
      <h1>
        <%= link_to 'Products', root_path, class: '' %>
      </h1>
      <div>
        <%= link_to "New product", new_product_path, class: "btn btn-primary",
        data: { turbo_frame: :remote_modal } %>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody id='products'>
        <%= render @products %>
      </tbody>
    </table>

    <div id="pagination">
      <%== pagy_next_link(@pagy, link_extra: 'data-controller="infinite-scroll"') unless @pagy.page == @pagy.last %>
    </div>
  <% end %>
<% end %>